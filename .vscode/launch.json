    "version": "0.2.0",
    "configurations": [      
        {
            "type": "java",
            "name": "CV Data Service Library (Launch)",
            "request": "launch",     
            "args": "",      
            "cwd": "${workspaceRoot}/cv-data-service-library",
            "mainClass": "com.trihydro.library.Application"           
        },
        {
            "type": "java",
            "name": "ODE Data Logger (Launch)",
            "request": "launch",            
            "args": "-g logger_group_btim_dev -t topic.OdeTimBroadcastJson -type string",
            "cwd": "${workspaceRoot}/ode-data-logger",
            "mainClass": "com.trihydro.cvlogger.app.OdeLoggingConsumer"           
        },
        {
            "type": "java",
            "name": "ODE Wrapper (Launch)",
            "request": "launch",                       
            "cwd": "${workspaceRoot}/ode-wrapper",
            "mainClass": "com.trihydro.odewrapper.Application" 
        },
        {
            "type": "java",
            "name": "CV Data Tasks (Launch)",
            "request": "launch",                       
            "cwd": "${workspaceRoot}/cv-data-tasks",
            "mainClass": "com.trihydro.tasks.CvTaskRunner" 
        },
        {
            "type": "java",
            "name": "Debug (Attach)",
            "request": "attach",
            "hostName": "localhost",
            "port": 0
        }
    ]
} 